<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dto="clr-namespace:DogWalker.Core.DTOs;assembly=DogWalker.Core"
             x:Class="DogWalkerApp.Views.MessagesPage"
             Title="Messages">
    <Grid RowDefinitions="*,Auto" Padding="16">
        <CollectionView ItemsSource="{Binding Messages}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:MessageDto">
                    <Frame Padding="10" Margin="0,4"
                           CornerRadius="16"
                           HorizontalOptions="{Binding Direction, Converter={StaticResource MessageAlignmentConverter}}">
                        <Label Text="{Binding Body}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Send an update..."
                   Text="{Binding DraftMessage}" />
            <Button Grid.Column="1"
                    Text="Send"
                    Command="{Binding SendCommand}" />
        </Grid>
    </Grid>
</ContentPage>
